{
    "manifest_version": 2,
    "name": "Reading Lines",
    "version": "0.1",
    "content_scripts": [
        {
        "matches": [
            "<all_urls>"
        ],
        "css": ["injected-styles.css"],
        "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/16x.png",
        "32": "icons/32x.png",
        "48": "icons/48x.png",
        "128": "icons/128x.png"
    },
    "permissions": [
        "storage"
    ],
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/@simonwep/pickr/dist/pickr.min.js; object-src 'self'"
}